@model IEnumerable<KhumaloCraftKC.Models.Order>

<h1>My Cart Orders</h1>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Global styling */
        * {
            box-sizing: border-box;
        }

        body {
            background-image: url('/Image/logo.jpg');
            background-size: 30%;
            background-position: center;
        }
        /* Container styling */
        .container {
            max-width: 800px; 
            margin: auto;
            padding: 20px;
            background-color: #f9f9f9; 
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Headings styling */
        h1 {
            text-align: center;
            color: deeppink;
        }

        /* Table styling */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                border: 1px solid #ccc;
                padding: 10px;
                text-align: center;
            }

            .table th {
                background-color: deeppink;
                color: white;
            }

            .table td img {
                max-width: 100px;
                max-height: 100px;
                border-radius: 5px;
            }

        /* Button styling */
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary {
            background-color: deeppink;
            color: white;
        }

        /* Proceed to Payment Button */
        .proceed-button {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>My Cart Orders</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><img src="@order.Product.ImageUrl" alt="Product Image" /></td>
                        <td>@order.Product.Name</td>
                        <td>@order.Product.Category</td>
                        <td>@order.Product.Price</td>
                        <td>@order.Quantity</td>
                        <td>@(order.Product.Price * order.Quantity)</td>
                        <td>
                            <form asp-controller="Order" asp-action="RemoveItem" method="post">
                                <input type="hidden" name="productId" value="@order.Product.ProductId" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Proceed to Payment Button -->
        <div class="proceed-button">
            <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary">Proceed to Payment</a>
        </div>
    </div>
</body>
</html>

