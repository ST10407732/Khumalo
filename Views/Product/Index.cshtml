@model IEnumerable<KhumaloCraftKC.Models.Product>



@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Global styling */
        * {
            box-sizing: border-box;
        }

        /* Container for products */
        .gallery {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 30%; /* Adjust as needed */
            height: 550px; /* Set fixed height */
            background-color: lightpink; /* Light pink background */
        }

            .gallery:hover {
                border: 1px solid #777;
            }

            /* Product image styling */
            .gallery img {
                width: 100%;
                height: 50%; /* Adjust as needed */
                object-fit: cover;
            }

        /* Product details */
        .desc {
            padding: 15px;
            text-align: center;
        }

            .desc h4,
            .desc p {
                color: black; /* Bold black text */
                font-weight: bold;
            }

        /* Order button */
        .order-btn {
            display: block;
            margin: 10px auto;
            padding: 8px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Clearfix */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        /* Heading style */
        h1 {
            text-align: center;
            color: white;
        }

        .Mywork-container {
            background-color: deeppink;
            color: white;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class=" Mywork-container">
        <h1>Explore our handcrafted KhumaloCraft Flower Vases</h1>
    </div>
    @foreach (var product in Model)
    {
        <div class="gallery">
            <a target="_blank" href="@product.ImageUrl">
                <img src="@product.ImageUrl" alt="@product.Name">
            </a>
            <div class="desc">
                <h4>@product.Name</h4>

                <p>Price: @product.Price each</p>
                <p>Category: @product.Category</p>
                <p>Availability: @product.Availability</p>
                <p>Quantity: @product.Quantity</p>
            </div>
        </div>
    }
    <a href="/MyWork/Index">View My Work</a>

    <div class="clearfix"></div>

  
</body>
</html>

